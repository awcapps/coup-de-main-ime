<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- App Bar custom -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.Material3.Dark"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
            app:title="" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenu principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Indicateur tour -->
            <TextView
                android:id="@+id/tv_turn_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textAlignment="center"
                android:layout_marginBottom="24dp"
                tools:text="♔ Blancs" />

            <!-- Historique des coups -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Historique des coups"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tv_moves_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:fontFamily="monospace"
                        android:textSize="20sp"
                        android:lineSpacingExtra="8dp"
                        android:minHeight="200dp"
                        android:padding="16dp"
                        android:background="?attr/colorSurfaceVariant"
                        tools:text="1. e4 e5\n2. Nf3 Nc6\n3. Bb5 a6" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Bouton Exporter la partie (seulement si terminée) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_export_game"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exporter la partie"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:contentDescription="Exporter la partie au format PGN ou image"
                app:icon="@android:drawable/ic_menu_share"
                app:iconGravity="start" />

            <!-- Bouton Fin de la partie -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_finish_game"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fin de la partie"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Terminer la partie et enregistrer le résultat"
                app:icon="@android:drawable/ic_menu_save"
                app:iconGravity="start" />

            <!-- Champ saisie invisible (juste pour focus IME) -->
            <EditText
                android:id="@+id/et_move_input"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="invisible"
                android:inputType="text" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- FAB Ajouter coup -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Ajouter un coup"
        app:srcCompat="@android:drawable/ic_input_add"
        app:backgroundTint="?attr/colorPrimary"
        app:tint="?attr/colorOnPrimary"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
